<!DOCTYPE html>
<html>
  <head>
    <title>MicroTwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;700&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  </head>

  <body>
    <% if flash[:notice] %> 
      <div class="notification is-primary global-notifications">
        <p class="notice">notice</p> 
      </div> 
    <% end %>
    <% if flash[:alert] %>
    <div class="notification is-danger global-notifications">
      <p class="alert">alert</p> 
    </div>
    <% end %>

    <%= yield %>
  </body>
</html>
