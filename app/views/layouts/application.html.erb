<!DOCTYPE html>
<html>
  <head>
    <title>MicroTwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;700&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %> 
      <div class="notification is-primary global-notifications">
        <p class="notice">notice</p> 
      </div> 
    <% end %>
    <% if flash[:alert] %>
    <div class="notification is-danger global-notifications">
      <p class="alert">alert</p> 
    </div>
    <% end %>


    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5">Twittter</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped">
            <p class="control">
              <%= link_to 'New Tweeet', new_tweeet_path, class: "button is-info is-inverted" %>
            </p>
            <p class="control">Sign Up</p>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
